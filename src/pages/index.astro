---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="GoVal - Digital Validation Solutions for Life Sciences">
  <Navigation />

  <!-- Hero Section with White Background -->
  <section class="hero">
    <div class="hero-container">
      <!-- Left Side: Hero Content -->
      <div class="hero-left">
        <div class="hero-badge fade-in-up">
          [ Expert Paperless Validation for Pharma ]
        </div>

        <h1 class="hero-title fade-in-up">
          Digitize Your Validation<br>
          Stay Compliant,<br>
          <span class="text-primary">Stay Ahead.</span>
        </h1>

        <p class="hero-subtitle fade-in-up">
          GoVal understands the unique validation challenges of the Life Sciences industry. Our platform is designed to meet the specific needs of pharma, biotech, medical device, CRO, and CMO organizations.
        </p>

        <div class="hero-buttons fade-in-up">
          <a href="/contact" class="btn btn-primary btn-lg">
            <span>Get Started</span>
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="/demo" class="btn btn-outline btn-lg">
            <span>View Demo</span>
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Side: Hero Image -->
      <div class="hero-right">
        <div class="hero-image-container fade-in-up">
          <img 
            src="/images/web-bg-dis.png" 
            alt="GoVal Digital Validation Platform - Pharma & Life Sciences Solutions" 
            class="hero-image"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose GoVal Section -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">
          Why Choose GoVal for Your Paperless Validation System?
        </h2>
        <p class="section-subtitle">
          GoVal's digital validation system revolutionizes life science validation with a secure, paperless approach. Achieve rapid GxP compliance through automated workflows and real-time audit trails.
        </p>
      </div>

      <div class="grid grid-cols-1 grid-cols-3">
        <!-- Feature Card 1 -->
        <div class="card fade-in-up">
          <div class="card-icon blue">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="card-title">Accelerated GxP Compliance</h3>
          <p class="card-text">Automated workflows and real-time audit trails ensure fast and reliable compliance with regulatory standards.</p>
        </div>

        <!-- Feature Card 2 -->
        <div class="card fade-in-up">
          <div class="card-icon green">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="card-title">100% Paperless Validation</h3>
          <p class="card-text">Eliminate manual processes and reduce errors with complete digital transformation of your validation workflows.</p>
        </div>

        <!-- Feature Card 3 -->
        <div class="card fade-in-up">
          <div class="card-icon purple">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <h3 class="card-title">Enhanced Audit Readiness</h3>
          <p class="card-text">System-generated reports and real-time data access for seamless audits and regulatory inspections.</p>
        </div>

        <!-- Feature Card 4 -->
        <div class="card fade-in-up">
          <div class="card-icon red">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="card-title">Secure Data Integrity</h3>
          <p class="card-text">Cloud-based platform with robust data management and security protocols ensuring data integrity.</p>
        </div>

        <!-- Feature Card 5 -->
        <div class="card fade-in-up">
          <div class="card-icon yellow">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="card-title">CFR Part 11 & Annex 11 Compliance</h3>
          <p class="card-text">Built-in tools for regulatory adherence and global compliance standards across all regions.</p>
        </div>

        <!-- Feature Card 6 -->
        <div class="card fade-in-up">
          <div class="card-icon indigo">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <h3 class="card-title">Productivity Improvement</h3>
          <p class="card-text">Optimize workflows and enhance efficiency across your validation processes with intelligent automation.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Capabilities Section -->
  <section class="section bg-light">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">
          Core Capabilities for Your Validation Needs
        </h2>
        <p class="section-subtitle">
          Comprehensive validation solutions designed specifically for life sciences organizations.
        </p>
      </div>

      <div class="grid grid-cols-1 grid-cols-3">
        <!-- Capability 1 -->
        <div class="text-center fade-in-up">
          <div class="card-icon blue" style="margin: 0 auto 1.5rem;">
            <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
          </div>
          <h3 style="font-size: 1.25rem; font-weight: 700; color: var(--gray-900); margin-bottom: 1rem;">GxP & Risk Assessment</h3>
          <p style="color: var(--gray-600); line-height: 1.6;">Conduct comprehensive GxP assessments, define GAMP categories, and identify critical validation deliverables with expert guidance.</p>
        </div>

        <!-- Capability 2 -->
        <div class="text-center fade-in-up">
          <div class="card-icon green" style="margin: 0 auto 1.5rem;">
            <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 style="font-size: 1.25rem; font-weight: 700; color: var(--gray-900); margin-bottom: 1rem;">Requirements & Specifications</h3>
          <p style="color: var(--gray-600); line-height: 1.6;">Define precise User Requirements (URS), specifications, and design documentation for clear project scope and execution.</p>
        </div>

        <!-- Capability 3 -->
        <div class="text-center fade-in-up">
          <div class="card-icon purple" style="margin: 0 auto 1.5rem;">
            <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 style="font-size: 1.25rem; font-weight: 700; color: var(--gray-900); margin-bottom: 1rem;">Automated Workflows & eSign</h3>
          <p style="color: var(--gray-600); line-height: 1.6;">Implement automated workflows with secure electronic signatures for streamlined validation processes and approvals.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- AI Features Highlight -->
  <section class="section bg-gradient-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title text-white">
          Powered by GoVal AI
        </h2>
        <p class="section-subtitle text-white opacity-90">
          Experience the next generation of validation with artificial intelligence driving efficiency, accuracy, and compliance.
        </p>
      </div>

      <div class="grid grid-cols-1 grid-cols-2">
        <div class="ai-feature fade-in-up">
          <div class="ai-feature-icon">
            <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3>Intelligent Risk Assessment</h3>
          <p>AI automatically categorizes systems and identifies validation requirements based on GAMP principles and regulatory standards.</p>
        </div>

        <div class="ai-feature fade-in-up">
          <div class="ai-feature-icon">
            <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3>Automated Test Generation</h3>
          <p>Machine learning creates comprehensive test cases and protocols, reducing manual effort by up to 80% while ensuring complete coverage.</p>
        </div>
      </div>

      <div class="text-center" style="margin-top: 3rem;">
        <a href="/goval-ai" class="btn btn-white btn-lg">
          <span>Explore GoVal AI</span>
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container">
      <div class="cta-container">
        <h2 class="cta-title">
          Ready to Transform Your Validation Process?
        </h2>
        <p class="cta-subtitle">
          Join leading pharmaceutical companies who trust GoVal for their digital validation needs.
        </p>
        <div class="cta-buttons">
          <a href="/contact" class="btn btn-primary btn-lg">
            Get Started Today
          </a>
          <a href="/demo" class="btn btn-secondary btn-lg">
            Request Demo
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  /* Global White Background */
  * {
    box-sizing: border-box;
  }

  html, body {
    background: #ffffff;
    margin: 0;
    padding: 0;
  }

  /* Hero Section - Clean White Background */
  .hero {
    background: #ffffff;
    padding: 5rem 0;
    overflow: hidden;
    position: relative;
  }

  .hero-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    min-height: 600px;
  }

  /* Left Side - Hero Content */
  .hero-left {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero-badge {
    background: rgba(67, 56, 202, 0.1);
    color: var(--blue-primary);
    border: 2px solid rgba(67, 56, 202, 0.2);
    padding: 0.75rem 1.5rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    display: inline-block;
    margin-bottom: 2rem;
    width: fit-content;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 900;
    line-height: 1;
    margin-bottom: 1.5rem;
    color: var(--gray-900);
    letter-spacing: -0.02em;
  }

  .text-primary {
    color: var(--blue-primary);
  }

  .hero-subtitle {
    font-size: 1.125rem;
    margin-bottom: 2.5rem;
    line-height: 1.7;
    color: var(--gray-700);
    max-width: 85%;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
  }

  /* Right Side - Hero Image */
  .hero-right {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .hero-image-container {
    position: relative;
    width: 100%;
    max-width: 550px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image {
    width: 100%;
    height: auto;
    max-width: 550px;
    object-fit: contain;
    filter: contrast(1.1) brightness(1.05) saturate(1.1);
    transition: all 0.3s ease;
  }

  .hero-image:hover {
    transform: scale(1.02);
  }

  /* Sections with White Background */
  .section {
    background: #ffffff;
    padding: 5rem 0;
  }

  .bg-light {
    background: #f8f9fa;
  }

  .bg-gradient-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--gray-600);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Grid System */
  .grid {
    display: grid;
    gap: 2rem;
  }

  .grid-cols-1 {
    grid-template-columns: 1fr;
  }

  .grid-cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .grid-cols-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  /* Cards */
  .card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }

  .card-icon {
    width: 3rem;
    height: 3rem;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: white;
  }

  .card-icon.blue { background: #3b82f6; }
  .card-icon.green { background: #10b981; }
  .card-icon.purple { background: #8b5cf6; }
  .card-icon.red { background: #ef4444; }
  .card-icon.yellow { background: #f59e0b; }
  .card-icon.indigo { background: #6366f1; }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1rem;
  }

  .card-text {
    color: var(--gray-600);
    line-height: 1.6;
  }

  /* AI Features */
  .ai-feature {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    backdrop-filter: blur(10px);
  }

  .ai-feature-icon {
    flex-shrink: 0;
    width: 4rem;
    height: 4rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .ai-feature h3 {
    color: white;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .ai-feature p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-container {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1.5rem;
  }

  .cta-subtitle {
    font-size: 1.125rem;
    color: var(--gray-600);
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1rem;
  }

  .btn-primary {
    background: var(--blue-primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--blue-secondary);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
  }

  .btn-secondary {
    background: white;
    color: var(--blue-primary);
    border-color: var(--blue-primary);
  }

  .btn-secondary:hover {
    background: var(--blue-primary);
    color: white;
  }

  .btn-outline {
    background: transparent;
    color: var(--blue-primary);
    border-color: var(--blue-primary);
  }

  .btn-outline:hover {
    background: var(--blue-primary);
    color: white;
  }

  .btn-white {
    background: white;
    color: var(--blue-primary);
  }

  .btn-white:hover {
    background: rgba(255, 255, 255, 0.9);
  }

  /* Utilities */
  .text-center {
    text-align: center;
  }

  .text-white {
    color: white;
  }

  .opacity-90 {
    opacity: 0.9;
  }

  /* Animation */
  .fade-in-up {
    animation: fadeInUp 0.8s ease-out;
    animation-fill-mode: both;
  }

  .fade-in-up:nth-child(2) { animation-delay: 0.2s; }
  .fade-in-up:nth-child(3) { animation-delay: 0.4s; }
  .fade-in-up:nth-child(4) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Mobile Responsive Design */
  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
      min-height: auto;
    }

    .hero-left {
      order: 1;
    }

    .hero-right {
      order: 2;
    }

    .hero-title {
      font-size: 2.75rem;
    }

    .hero-subtitle {
      max-width: 100%;
    }

    .hero-badge {
      margin: 0 auto 2rem;
    }

    .hero-buttons {
      justify-content: center;
    }

    .grid-cols-2 {
      grid-template-columns: 1fr;
    }

    .grid-cols-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0;
    }

    .hero-container {
      gap: 2rem;
      padding: 0 1rem;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .section {
      padding: 3rem 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .cta-title {
      font-size: 2rem;
    }

    .hero-buttons,
    .cta-buttons {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .grid-cols-2,
    .grid-cols-3 {
      grid-template-columns: 1fr;
    }

    .ai-feature {
      flex-direction: column;
      text-align: center;
    }

    .card {
      padding: 1.5rem;
    }

    .cta-container {
      padding: 2rem 1.5rem;
      margin: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.9rem;
    }

    .hero-subtitle {
      font-size: 0.95rem;
    }

    .section-title {
      font-size: 1.75rem;
