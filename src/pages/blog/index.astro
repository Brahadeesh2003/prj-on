---
// Corrected import paths for blog/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

// Sample blog posts data (replace with actual posts later)
const samplePosts = [
  {
    title: "Smarter Approach To Implement Paperless Validation Solution For Your Organization",
    date: "2021-07-23",
    category: "Digital Validation",
    excerpt: "Going for paperless validation and implementing a comprehensive Validation Management System (VLMS) requires a change in mindset in the leadership to identify the right technology that helps the organization to adopt digital transformation in validation.",
    slug: "smarter-approach-paperless-validation"
  },
  {
    title: "How GoVal can help the organization to go for digital validation and get rid of manual processes",
    date: "2021-07-01",
    category: "Technology", 
    excerpt: "Manual to automation with usage of GoVal, your organization can automate the manual way of doing validation process and go 100% paperless. In any organization, adaption to any new technology or process change has many challenges to overcome.",
    slug: "goval-digital-validation-automation"
  },
  {
    title: "Manual Validation Pain Points ‚Äì An Insider Story",
    date: "2021-07-01",
    category: "Industry Insights",
    excerpt: "Introduction Paperless validation To be begin with, I was working in a CRO for IT department. We were used to develop custom application, support existing applications like DMS, LIMS, ERP Etc.",
    slug: "manual-validation-pain-points"
  },
  {
    title: "Computer system validation, Computer software assurance and Digital transformation",
    date: "2021-07-01", 
    category: "GxP Compliance",
    excerpt: "From Copy Paste documents, paper printouts work to digital way of validation. Critical thinking approach is required towards validation to challenge the method and systems.",
    slug: "computer-system-validation-digital-transformation"
  },
  {
    title: "Digital Transformation solutions for Pharmaceutical Manufacturing",
    date: "2021-06-30",
    category: "Digital Validation",
    excerpt: "Many instrument logs like calibration report, logbooks for temperature monitoring, experiments logs etc are still in paper-based records. Having such a fast growth in mobile applications development, the companies should adopt to digital way of recording this data entry process.",
    slug: "digital-transformation-pharmaceutical-manufacturing"
  }
];

// Sort posts by date (newest first)
const sortedPosts = samplePosts.sort((a, b) => {
  return new Date(b.date) - new Date(a.date);
});

// Format date function
function formatDate(date) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}
---

<BaseLayout title="Articles And Blogs About Paperless Validation - GoVal">
  <Navigation />

  <!-- Blog Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <h1 class="hero-title">Articles And Blogs About Paperless Validation</h1>
        <p class="hero-subtitle">
          Stay updated with the latest insights, best practices, and industry trends in digital validation and GxP compliance.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Section -->
  <section class="section">
    <div class="container">
      <div class="blog-grid">
        {sortedPosts.map((post) => (
          <article class="blog-card">
            <div class="blog-content">
              <h2 class="blog-title">
                <a href={`/blog/${post.slug}`}>
                  {post.title}
                </a>
              </h2>

              <div class="blog-meta">
                <time class="blog-date">
                  {formatDate(post.date)}
                </time>
                <span class="blog-category">{post.category}</span>
              </div>

              <p class="blog-excerpt">
                {post.excerpt}
              </p>

              <a href={`/blog/${post.slug}`} class="read-more-link">
                Read More
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- Admin Console Link -->
      <div class="admin-section">
        <div class="admin-card">
          <h3>üìù Content Management</h3>
          <p>Site administrators can create and publish blog posts through our admin console.</p>
          <a href="/admin/" class="admin-link">Access Admin Console ‚Üí</a>
        </div>
      </div>

      <!-- Navigation Links -->
      <div class="nav-links">
        <div class="nav-grid">
          <a href="/goval-ai" class="nav-card">
            <div class="nav-icon">ü§ñ</div>
            <h4>GoVal AI</h4>
            <p>Discover our AI-powered validation solutions</p>
          </a>

          <a href="/customer-stories" class="nav-card">
            <div class="nav-icon">‚≠ê</div>
            <h4>Customer Stories</h4>
            <p>Read success stories from our clients</p>
          </a>

          <a href="/pricing" class="nav-card">
            <div class="nav-icon">üí∞</div>
            <h4>Pricing</h4>
            <p>View our flexible pricing plans</p>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  /* CSS Variables */
  :root {
    --blue-primary: #6366f1;
    --blue-secondary: #4f46e5;
    --gray-900: #111827;
    --gray-800: #1f2937;
    --gray-700: #374151;
    --gray-600: #4b5563;
    --gray-500: #6b7280;
    --gray-400: #9ca3af;
    --gray-300: #d1d5db;
    --gray-200: #e5e7eb;
    --gray-100: #f3f4f6;
    --gray-50: #f9fafb;
  }

  /* Global White Background */
  html, body {
    background: #ffffff;
  }

  /* Hero Section */
  .hero {
    background: #ffffff;
    padding: 4rem 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--gray-600);
    line-height: 1.6;
  }

  /* Blog Section */
  .section {
    background: #ffffff;
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .blog-grid {
    display: grid;
    gap: 2.5rem;
    max-width: 800px;
    margin: 0 auto 4rem;
  }

  /* Blog Cards */
  .blog-card {
    background: #ffffff;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 2rem;
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    border-bottom-color: var(--blue-primary);
  }

  .blog-card:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .blog-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
  }

  .blog-title a {
    color: var(--gray-900);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .blog-title a:hover {
    color: var(--blue-primary);
  }

  .blog-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    flex-wrap: wrap;
  }

  .blog-date {
    color: var(--gray-500);
    font-weight: 500;
  }

  .blog-category {
    background: var(--blue-primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .blog-excerpt {
    color: var(--gray-600);
    line-height: 1.6;
    font-size: 1rem;
    margin: 0.5rem 0;
  }

  .read-more-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--blue-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    width: fit-content;
  }

  .read-more-link:hover {
    color: var(--blue-secondary);
    transform: translateX(2px);
  }

  .read-more-link svg {
    transition: transform 0.2s ease;
  }

  .read-more-link:hover svg {
    transform: translateX(2px);
  }

  /* Admin Section */
  .admin-section {
    margin: 4rem auto;
    max-width: 600px;
  }

  .admin-card {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    padding: 2.5rem;
    border-radius: 1rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .admin-card h3 {
    color: var(--gray-900);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .admin-card p {
    color: var(--gray-600);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .admin-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--blue-primary);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .admin-link:hover {
    background: var(--blue-secondary);
    transform: translateY(-2px);
  }

  /* Navigation Links */
  .nav-links {
    margin-top: 4rem;
  }

  .nav-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .nav-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    text-decoration: none;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    text-align: center;
  }

  .nav-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .nav-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .nav-card h4 {
    color: var(--gray-900);
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .nav-card p {
    color: var(--gray-600);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0;
    }

    .hero-title {
      font-size: 2rem;
    }

    .section {
      padding: 3rem 0;
    }

    .blog-title {
      font-size: 1.25rem;
    }

    .blog-meta {
      flex-wrap: wrap;
    }

    .admin-card {
      padding: 2rem;
    }

    .nav-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.75rem;
    }

    .blog-card {
      padding-bottom: 1.5rem;
    }

    .admin-card {
      padding: 1.5rem;
    }

    .nav-card {
      padding: 1.5rem;
    }
  }
</style>