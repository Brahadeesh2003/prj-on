---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Get all blog posts from content collection
const allPosts = await Astro.glob('../content/blog/*.md');

// Sort posts by date (newest first)
const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.frontmatter.date) - new Date(a.frontmatter.date);
});

// Format date function
function formatDate(date) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}
---

<BaseLayout title="Articles And Blogs About Paperless Validation - GoVal">
  <Navigation />

  <!-- Blog Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <h1 class="hero-title">Articles And Blogs About Paperless Validation</h1>
        <p class="hero-subtitle">
          Stay updated with the latest insights, best practices, and industry trends in digital validation and GxP compliance.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts Section -->
  <section class="section">
    <div class="container">
      <div class="blog-grid">
        {sortedPosts.map((post) => (
          <article class="blog-card">
            <div class="blog-content">
              <h2 class="blog-title">
                <a href={`/blog/${post.frontmatter.slug || post.file.split('/').pop().replace('.md', '')}`}>
                  {post.frontmatter.title}
                </a>
              </h2>

              <div class="blog-meta">
                <time class="blog-date">
                  {formatDate(post.frontmatter.date)}
                </time>
                {post.frontmatter.category && (
                  <span class="blog-category">{post.frontmatter.category}</span>
                )}
              </div>

              <p class="blog-excerpt">
                {post.frontmatter.excerpt || post.frontmatter.description}
              </p>

              <a href={`/blog/${post.frontmatter.slug || post.file.split('/').pop().replace('.md', '')}`} class="read-more-link">
                Read More
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- No posts message -->
      {sortedPosts.length === 0 && (
        <div class="no-posts">
          <h3>No blog posts yet</h3>
          <p>Check back soon for articles about paperless validation and digital transformation.</p>
          <p><a href="/admin/" class="admin-link">Login to Admin Console</a> to create your first blog post.</p>
        </div>
      )}
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  /* CSS Variables */
  :root {
    --blue-primary: #6366f1;
    --blue-secondary: #4f46e5;
    --gray-900: #111827;
    --gray-800: #1f2937;
    --gray-700: #374151;
    --gray-600: #4b5563;
    --gray-500: #6b7280;
    --gray-400: #9ca3af;
    --gray-300: #d1d5db;
    --gray-200: #e5e7eb;
    --gray-100: #f3f4f6;
    --gray-50: #f9fafb;
  }

  /* Global White Background */
  html, body {
    background: #ffffff;
  }

  /* Hero Section */
  .hero {
    background: #ffffff;
    padding: 4rem 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--gray-600);
    line-height: 1.6;
  }

  /* Blog Section */
  .section {
    background: #ffffff;
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .blog-grid {
    display: grid;
    gap: 2.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Blog Cards */
  .blog-card {
    background: #ffffff;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 2rem;
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    border-bottom-color: var(--blue-primary);
  }

  .blog-card:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .blog-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
  }

  .blog-title a {
    color: var(--gray-900);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .blog-title a:hover {
    color: var(--blue-primary);
  }

  .blog-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
  }

  .blog-date {
    color: var(--gray-500);
    font-weight: 500;
  }

  .blog-category {
    background: var(--blue-primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .blog-excerpt {
    color: var(--gray-600);
    line-height: 1.6;
    font-size: 1rem;
    margin: 0.5rem 0;
  }

  .read-more-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--blue-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    width: fit-content;
  }

  .read-more-link:hover {
    color: var(--blue-secondary);
    transform: translateX(2px);
  }

  .read-more-link svg {
    transition: transform 0.2s ease;
  }

  .read-more-link:hover svg {
    transform: translateX(2px);
  }

  /* No posts state */
  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--gray-600);
  }

  .no-posts h3 {
    color: var(--gray-900);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .admin-link {
    color: var(--blue-primary);
    text-decoration: none;
    font-weight: 600;
  }

  .admin-link:hover {
    text-decoration: underline;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0;
    }

    .hero-title {
      font-size: 2rem;
    }

    .section {
      padding: 3rem 0;
    }

    .blog-title {
      font-size: 1.25rem;
    }

    .blog-meta {
      flex-wrap: wrap;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.75rem;
    }

    .blog-card {
      padding-bottom: 1.5rem;
    }
  }
</style>